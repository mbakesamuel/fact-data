generator client {
  provider = "prisma-client"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
}

model CropReception {
  id             Int      @id @default(autoincrement())
  operation_date DateTime
  factory_id     Int
  field_grade_id Int
  supply_unit_id Int
  qty_crop       Float
  user_id        String

  fieldSupply FieldSupply    @relation(fields: [field_grade_id], references: [id])
  supplyUnit  CropSupplyUnit @relation(fields: [supply_unit_id], references: [id])
  factory     Factory        @relation(fields: [factory_id], references: [id])
}

model CropProcessing {
  id               Int      @id @default(autoincrement())
  operation_date   DateTime
  factory_id       Int
  process_grade_id Int
  qty_proc         Float
  user_id          String

  //relationship
  factory Factory     @relation(fields: [factory_id], references: [id])
  grade   FieldSupply @relation(fields: [process_grade_id], references: [id])
}

model Factory {
  id           Int    @id @default(autoincrement())
  factory_name String

  cropProcessing CropProcessing[]
  cropReception  CropReception[]

  factoryFlows FactoryFlow[]

  procEstMonthlyPhasings ProcEstMonthlyPhasing[]

  factWeeklyPhasings FactWeeklyPhasing[]
}

model CropType {
  id        Int    @id @default(autoincrement())
  crop_type String

  factoryFlows FactoryFlow[]

  procEstMonthlyPhasings ProcEstMonthlyPhasing[]

  factWeeklyPhasings FactWeeklyPhasing[]
}

//this is like the various estates supplying the factories.
model CropSupplyUnit {
  id          Int @id @default(autoincrement())
  estate_id   Int
  sub_unit_id Int

  subUnit       SubUnit         @relation(fields: [sub_unit_id], references: [id]) //one to many relation with subUnit.
  estate        Estate          @relation(fields: [estate_id], references: [id])
  cropReception CropReception[]

  cropCollections CropCollection[]
}

model Estate {
  id            Int    @id @default(autoincrement())
  name          String
  agric_unit_id Int

  agricUnit       AgricUnit        @relation(fields: [agric_unit_id], references: [id])
  cropSupplyUnits CropSupplyUnit[]
}

model AgricUnit {
  id         Int    @id @default(autoincrement())
  agric_unit String

  estate Estate[]
}

model SubUnit {
  id             Int              @id @default(autoincrement())
  sub_unit       String
  grp            Int
  cropSupplyUnit CropSupplyUnit[]
}

model FieldSupply {
  id               Int    @id @default(autoincrement())
  crop             String
  productnature_id Int //foreing key.

  //attribute to product
  productNature  ProductNature    @relation(fields: [productnature_id], references: [id])
  cropProcessing CropProcessing[]
  cropReception  CropReception[]
}

model ProductNature {
  id      Int    @id @default(autoincrement()) //primary key
  product String

  fieldSupplies FieldSupply[]
}

model CropCollection {
  id                  Int             @id @default(autoincrement()) 
  budYear             Int           
  cropSupplyUnitId    Int            
  func_status       Boolean        
  annProd             Decimal        @db.Decimal(18, 2)
  latexQty            Decimal?        @db.Decimal(18, 2)
  otherGradeQty       Decimal?        @db.Decimal(18, 2)

  // Relations
  cropSupplyUnit      CropSupplyUnit  @relation(fields: [cropSupplyUnitId], references: [id])
  factoryFlows        FactoryFlow[]

 
  procEstMonthlyPhasings ProcEstMonthlyPhasing[]
}

model FactoryFlow {
  id               Int            @id @default(autoincrement())      
  cropCollectionId Int           
  factoryId        Int           
  cropTypeId       Int           
  procQty     Decimal        @db.Decimal(18, 2)

  // Relations
  cropCollection   CropCollection @relation(fields: [cropCollectionId], references: [id])
  factory          Factory         @relation(fields: [factoryId], references: [id])
  cropType         CropType        @relation(fields: [cropTypeId], references: [id])

}

model CropPhasingRatio {
  id             Int     @id @default(autoincrement())
  budYear        Int
  monthNo        Int
  monthName      String
  phasingRatio   Float
  abPhasingRatio Float
}

model ProcEstMonthlyPhasing {
  id                 Int      @id @default(autoincrement())
  tbl_FactoryID      Int
  tbl_CropTypeID     Int
  tbl_CropCollectionId Int
  effDate            DateTime
  monthEst           Float

  //define relations
  factory        Factory     @relation(fields: [tbl_FactoryID], references: [id])
  cropType       CropType    @relation(fields: [tbl_CropTypeID], references: [id])
  cropCollection CropCollection @relation(fields: [tbl_CropCollectionId], references: [id])
}

model FactWeeklyPhasing {
  id             Int      @id @default(autoincrement())
  BudYear        Int
  Period         String
  WeekStart      DateTime
  WeekEnd        DateTime
  DaysAllocated  Int
  tbl_FactoryId  Int
  tbl_CropTypeId Int
  weekNo         Int
  WkEst          Float
  //define relations
  Factory   Factory   @relation(fields: [tbl_FactoryId], references: [id])
  CropType  CropType  @relation(fields: [tbl_CropTypeId], references: [id])

}


