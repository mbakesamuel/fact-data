generator client {
  provider = "prisma-client"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
}

model CropReception {
  id             Int      @id @default(autoincrement())
  operation_date DateTime
  factory_id     Int
  field_grade_id Int
  supply_unit_id Int
  qty_crop       Float
  user_id        String

  fieldSupply FieldSupply    @relation(fields: [field_grade_id], references: [id])
  supplyUnit  CropSupplyUnit @relation(fields: [supply_unit_id], references: [id])
  factory     Factory        @relation(fields: [factory_id], references: [id])
}

model CropProcessing {
  id               Int      @id @default(autoincrement())
  operation_date   DateTime
  factory_id       Int
  process_grade_id Int
  qty_proc         Float
  user_id          String

  //relationship
  factory Factory     @relation(fields: [factory_id], references: [id])
  grade   FieldSupply @relation(fields: [process_grade_id], references: [id])
}

model Factory {
  id           Int    @id @default(autoincrement())
  factory_name String

  cropProcessing CropProcessing[]
  cropReception  CropReception[]

  factoryFlows Factory_flow[]
}

model CropType {
  id        Int    @id @default(autoincrement())
  crop_type String

  factoryFlows Factory_flow[]
}

//this is like the various estates supplying the factories.
model CropSupplyUnit {
  id          Int @id @default(autoincrement())
  estate_id   Int
  sub_unit_id Int

  subUnit       SubUnit         @relation(fields: [sub_unit_id], references: [id]) //one to many relation with subUnit.
  estate        Estate          @relation(fields: [estate_id], references: [id])
  cropReception CropReception[]

  cropCollections Crop_collection[]
}

model Estate {
  id            Int    @id @default(autoincrement())
  name          String
  agric_unit_id Int

  agricUnit       AgricUnit        @relation(fields: [agric_unit_id], references: [id])
  cropSupplyUnits CropSupplyUnit[]
}

model AgricUnit {
  id         Int    @id @default(autoincrement())
  agric_unit String

  estate Estate[]
}

model SubUnit {
  id             Int              @id @default(autoincrement())
  sub_unit       String
  grp            Int
  cropSupplyUnit CropSupplyUnit[]
}

model FieldSupply {
  id               Int    @id @default(autoincrement())
  crop             String
  productnature_id Int //foreing key.

  //attribute to product
  productNature  ProductNature    @relation(fields: [productnature_id], references: [id])
  cropProcessing CropProcessing[]
  cropReception  CropReception[]
}

model ProductNature {
  id      Int    @id @default(autoincrement()) //primary key
  product String

  fieldSupplies FieldSupply[]
}

model Crop_collection {
  id                  Int             @id @default(autoincrement()) @map("ID")
  budYear             Int             @map("BudYear")
  cropSupplyUnitId    Int             @map("tbl_CropSupplyUnitId")
  nonFunctional       Boolean         @map("NonFunc")
  annualProduction    Decimal         @db.Decimal(18, 2) @map("AnnProd")
  latexFlag           Boolean         @map("Latex?")
  latexQty            Decimal?        @db.Decimal(18, 2) @map("Latex")
  otherGradeQty       Decimal?        @db.Decimal(18, 2) @map("OtherGrade")

  // Relations
  cropSupplyUnit      CropSupplyUnit  @relation(fields: [cropSupplyUnitId], references: [id])
  factoryFlows        Factory_flow[]

  @@map("crop_collection")
}

model Factory_flow {
  id               Int            @id @default(autoincrement()) @map("ID")
  budYear          Int            @map("BudYear")
  cropCollectionId Int            @map("tbl_CropCollectionId")
  factoryId        Int            @map("tbl_FactoryId")
  cropTypeId       Int            @map("tbl_CropTypeId")
  processedQty     Decimal        @db.Decimal(18, 2) @map("ProQty")

  // Relations
  cropCollection   Crop_collection @relation(fields: [cropCollectionId], references: [id])
  factory          Factory         @relation(fields: [factoryId], references: [id])
  cropType         CropType        @relation(fields: [cropTypeId], references: [id])

  @@map("Factory_flow")
}
